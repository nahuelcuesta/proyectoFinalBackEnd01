<div class="container">
    <h1>Productos</h1>
    {{#if isValid}}
    <div>
        {{#each docs}}
            <div>           
                <div>Título: {{this.title}}<br>
                Descripción: {{this.description}}<br>
                Código: {{this.code}}<br>
                Precio: {{this.price}}<br>
                Stock: {{this.stock}}<br>
                Categoría: {{this.category}}<br>
                Imágenes: {{this.thumbnails}}<br>
                Estado: {{this.status}} </div>
                <br>                
                <div><button class="btn btn-danger" onclick="AgregarProductoACarro('{{this.id}}')">Agregar al Carro</button>               
            </div>
        <hr>
        {{/each}}
    </div>
    <br />

    <div>
        {{#if hasPrevPage}}
        <a href={{this.prevLink}}>
            << Anterior </a>
                {{/if}}

                {{!-- numero de pagina --}}
                &nbsp;
                {{this.page}}
                &nbsp;

                {{#if hasNextPage}}
                <a href={{this.nextLink}}>
                    Siguiente >> </a>
                {{/if}}

    </div>
    {{else}}
    <h1>No hay productos para mostrar</h1>
    {{/if}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>



